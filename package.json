{
  "name": "@avila-tek/next-template",
  "version": "2.0.0",
  "description": "A next.js template for starting frontend projects in Avila Tek",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --fix",
    "git:add": "git add .",
    "precommit": "run-s lint git:add",
    "prepush": "run-s lint git:add",
    "prepare": "husky install",
    "setup-sentry": "npx @sentry/wizard -i nextjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run prepush"
    }
  },
  "dependencies": {
    "@sentry/nextjs": "^6.8.0",
    "avilatek-utils": "^0.1.0",
    "framer-motion": "^4.1.17",
    "nanoid": "^3.1.23",
    "next": "11.0.1",
    "next-compose-plugins": "^2.2.1",
    "nprogress": "^0.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@tailwindcss/forms": "^0.3.3",
    "@tailwindcss/typography": "^0.4.1",
    "@types/node": "^16.0.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "autoprefixer": "^10.2.6",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-avilatek": "^1.5.0",
    "eslint-config-avilatek-typescript": "^1.5.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-import": "^14.0.2",
    "prettier": "^2.3.2",
    "tailwindcss": "^2.2.4",
    "typescript": "^4.3.5"
  }
}
