{
  "name": "@avila-tek/next-template",
  "version": "3.0.0",
  "description": "A next.js template for starting frontend projects in Avila Tek",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --fix",
    "git:add": "git add .",
    "precommit": "run-s lint git:add",
    "prepush": "run-s lint git:add",
    "prepare": "husky install",
    "setup-sentry": "npx @sentry/wizard -i nextjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run prepush"
    }
  },
  "dependencies": {
    "@sentry/nextjs": "^6.16.1",
    "avilatek-utils": "^0.1.0",
    "framer-motion": "^5.5.5",
    "nanoid": "^3.1.30",
    "next": "12.0.7",
    "next-compose-plugins": "^2.2.1",
    "nprogress": "^0.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/node": "^17.0.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.37",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.4.1",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-config-avilatek": "^1.9.0",
    "eslint-config-avilatek-typescript": "^1.9.0",
    "eslint-config-next": "^12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-import": "^14.0.2",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.5.4"
  }
}
